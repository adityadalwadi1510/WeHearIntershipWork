<resources>
    <!-- Base application theme. -->
    <style name="wh" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="whNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="wh.AuthLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/wh_standard_margin_m01</item>
        <item name="android:layout_marginStart">@dimen/wh_standard_margin_m01</item>
        <item name="android:layout_marginEnd">@dimen/wh_standard_margin_m01</item>
    </style>
    <style name="wh.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wh.TextInputLayout.PhoneField">
        <item name="android:hint">@string/wh_phone_hint</item>
    </style>
    <style name="wh.TextInputLayout.Name">
        <item name="android:hint">Name</item>
    </style>

    //Textview
    <style name="wh.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="wh.Text.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="wh.Text.T01">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wh.Text.T02">
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="wh.Text.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="wh.Text.Error">
        <item name="android:textColor">@color/colorTextError</item>
    </style>

    <style name="wh.Text.DateOfBirth">
        <item name="android:padding">@dimen/wh_standard_padding_p01</item>
        <item name="android:textColor">#000</item>
    </style>

    //Edittext
    <style name="wh.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wh.TextInputEditText.PhoneField">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">10</item>
    </style>
    <style name="wh.TextInputEditText.Name">
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
    </style>

    
    //Button
    <style name="wh.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/wh_standard_margin_m03</item>
        <item name="android:layout_marginEnd">@dimen/wh_standard_margin_m03</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="wh.Button.B1">
        <item name="android:background">@drawable/wh_button_bg</item>
    </style>

    <style name="wh.Button.B2">
        <item name="android:background">@drawable/wh_button_bg2</item>
    </style>



</resources>